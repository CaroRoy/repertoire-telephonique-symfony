{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-12">
                <h1>Cr√©er un compte</h1>
            </div>
            <div class="col-12">
                <div class="card">

                    <div class="card-header">
                        <h3>Formulaire d'inscription</h3>
                    </div>

                    <div class="card-body">
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}

                        {{ form_start(registrationForm) }}

                            {{ form_row(registrationForm.firstName) }}
                            {{ form_row(registrationForm.lastName) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword) }}

                            <button type="submit" class="btn btn-primary mt-3" id="buttonCreate">Inscription</button>
                            <button class="btn btn-primary mt-3" type="button" id="buttonLoading" disabled>
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                Enregistrement en cours...
                            </button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const buttonCreated = document.getElementById('buttonCreate');
        const buttonLoading = document.getElementById('buttonLoading');

        if(buttonLoading) {
            buttonLoading.style.display = "none";
        }

        if(buttonCreated) {
            buttonCreated.addEventListener("click", function() {
                buttonCreated.style.display = "none";
                buttonLoading.style.display = "initial";
            })
        }        
    </script>

{% endblock %}